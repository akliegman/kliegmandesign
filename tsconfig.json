{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "server/dist",
    "forceConsistentCasingInFileNames": true,  
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["server/**/*"]
}
